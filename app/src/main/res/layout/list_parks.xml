<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="5dp">
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp">
        <ImageView
            android:id="@+id/parkImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/parks"
            android:scaleType="fitXY"
            android:padding="1dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/NParkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_alignTop="@+id/thumbnail"
        android:typeface="sans"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="2dip"
        android:textSize="15dp"
        android:textColor="#040404"
        android:text="National Park"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NParkName"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="#da1616"
        android:typeface="sans"
        android:textSize="15dp"
        android:text="Area"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/ParkDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Area"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingBottom="2dip"
        android:textColor="#1d69d2"
        android:text="Distance"
        android:textStyle="bold"
        />



</RelativeLayout>